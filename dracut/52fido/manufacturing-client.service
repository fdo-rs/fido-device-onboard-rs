[Unit]
Description=Manufacturing client DIUN
DefaultDependencies=false

After=coreos-installer.service
Before=coreos-installer-reboot.service
ConditionPathExists=/etc/manufacturing-service-url
EnvironmentFile=/etc/manufacturing-service-url
Requires=dev-disk-by\x2dlabel-boot.device

OnFailure=emergency.target
OnFailureJobMode=replace-irreversibly

[Service]
Type=oneshot
ExecStart=/usr/libexec/manufacturing-client-service
RemainAfterExit=yes